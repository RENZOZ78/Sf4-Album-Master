{% extends 'admin/_template.html.twig' %}

{% block title %}
    Artistes
{% endblock %}

{% block content %}
    <div class="section">
        <h1 class="title">Artistes</h1>

        {% include 'includes/flash.html.twig' %}

        <table class="table is-fullwidth">
            <thead>
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>
                    <a href="{{ path('admin_artist_add') }}" class="button is-info is-small">
                        Nouvel artiste
                    </a>
                </th>
            </tr>
            </thead>
            <tbody>
            {% for artist in artist_list %}
                <tr>
                    <td>{{ artist.id }}</td>
                    <td>{{ artist.name }}</td>
                    <td>
                        <div class="buttons are-small">
                            <a href="{{ path('admin_artist_edit', {id: artist.id}) }}" class="button is-info">
                                <span class="icon"><i class="fas fa-edit"></i></span>
                            </a>
                            <a href="{{ path('admin_artist_delete', {id: artist.id}) }}" class="button is-danger">
                                <span class="icon"><i class="fas fa-times"></i></span>
                            </a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

